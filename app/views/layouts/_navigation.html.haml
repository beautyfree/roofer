= link_to "Руфим", root_path, :class => 'brand'
=# cities_nav
= link_to "Добавить крышу", new_roof_path, :class => 'btn btn-inverse'

%ul.nav.pull-right
  - if user_signed_in?
    %li
      %a.btn.btn-inverse{ :href => balance_path, 'data-toggle' => 'tooltip', 'data-placement' => 'bottom', 'data-original-title' => 'Баланс'}
        %i.icon-white.icon-rocket
        = current_user.balance.to_i
    %li.divider-vertical
    %li
      .btn-group.pull-right
        %button.btn.btn-inverse= current_user.email
        %button.btn.btn-inverse.dropdown-toggle{"data-toggle" => "dropdown"}
          %span.caret
        %ul.dropdown-menu
          %li
            = link_to 'Редактировать данные', edit_user_registration_path
          %li.divider
          %li
            = link_to 'Выйти', destroy_user_session_path, :method=>'delete'
  - else
    %li
      = link_to 'Войти', new_user_session_path
    %li
      = link_to 'Присоединиться', new_user_registration_path
